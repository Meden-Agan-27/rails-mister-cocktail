<h1><%= @cocktail.name %></h1>
<% @cocktail.doses.each do |dose| %>
  <p>You need: <%= dose.description %> of <%= dose.ingredient.name %></p>
 <%= link_to 'Delete this dose', dose_path(dose), method: :delete, data: {confirm: "Are you sure?"} %>
<% end %>

<%= link_to 'Back to cocktails list', cocktails_path %>
<%= link_to 'Create a new dose', new_cocktail_dose_path(@cocktail) %>
